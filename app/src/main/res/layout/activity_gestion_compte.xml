<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.dioolcustomer.activities.GestionCompteActivity">


    <TextView
        android:id="@+id/text_empty_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vous n'avez aucun compte déclaré, Cliquer sur + pour ajouter des comptes!"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_comte_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/circle1"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Compte1 XwT 250142"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/text_update_compte1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/pen" />


            <ImageView
                android:id="@+id/text_delete_compte1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/deletee" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_margin="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_comte_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/circle2"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Compte1 XwT 250142"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/text_update_compte2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/pen" />


            <ImageView
                android:id="@+id/text_delete_compte2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/deletee" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
