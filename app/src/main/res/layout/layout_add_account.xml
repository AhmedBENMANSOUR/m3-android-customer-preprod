<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#009633">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Ajouter un compte"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Entrer l'identifiant de votre compte bancaire"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/text_id_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:hint="Numéro de compte" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="Vous avez la possibilité d'ajouter au max deux comptes"
        android:textColor="@android:color/black"
        android:layout_margin="20dp"
        android:textSize="12sp" />


    <Button
        android:id="@+id/create_account_button"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btnmauve"
        android:text="Valider"
        android:textColor="@color/white" />


</LinearLayout>